{
  "name": "o2oprotocol",
  "private": true,
  "main": "./dist/index.js",
  "version": "1.0.0",
  "description": "Smart Contracts (create and book listings) without directly interfacing with the Blockchain or IPFS.",
  "main": "./dist/index.js",
  "scripts": {
    "test": "webpack-dev-server --hot --config test/webpack.config.js",
    "build:contracts": "cd ../contracts && npx truffle compile",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run build:contracts && npm run build:webpack",
    "build:watch": "npm run build:contracts && npm run build:webpack -- --watch",
    "prepare": "npm run build",
    "precommit": "lint-staged"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-inline-json-import": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-node7": "^1.5.0",
    "fs-extra": "^5.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.12.4",
    "prettier": "^1.4.4"
  },
  "dependencies": {
    "ajv": "^6.4.0",
    "bs58": "^4.0.1",
    "ipfs-api": "^19.0.0",
    "map-cache": "^0.2.2",
    "truffle-contract": "^3.0.4",
    "util.promisify": "^1.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --print-width 120",
      "git add"
    ]
  }
}
