{
  "name": "o2oprotocol",
  "version": "1.0.0",
  "description": "Smart Contracts (create and book listings) without directly interfacing with the Blockchain or IPFS.",
  "engines": {
    "node": ">=8.10.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "pretest": "truffle compile",
    "compile": "truffle compile",
    "recompile": "truffle compile --all",
    "test": "truffle test --network development",
    "test:watch": "watch \"reset && npm test\" test/ contracts/",
    "test:services": "cd services && npm install && npm run test:mocha",
    "chain:private": "ganache-cli -p 8545 &",
    "ipfs:daemon": "cd ipfs && npm install && pm2 start ipfs/daemon/index.js --name=IpfsDaemon",
    "migrate:development": "truffle migrate --network development",
    "migrate:kovan": "truffle migrate --network kovan",
    "migrate:rinkeby": "truffle migrate --network rinkeby",
    "migrate:ropsten": "truffle migrate --network ropsten",
    "migrate:mainnet": "truffle migrate --network mainnet",
    "deploy:development": "truffle deploy --network development",
    "demo:init": "cd scripts/init-data && npm install && node index.js",
    "demo:reset": "cd scripts/init-data && npm install && node reset.js"
    "test:contracts": "node test-contracts.js",
    "test": "webpack-dev-server --hot --config test/webpack.config.js",
    "build": "node index.js",
    "format": "npx prettier --write test/*.js src/**.js",
    "prepare": "npm run build",
    "setup": "npm install && npm link",
    "start": "node index.js serve"
  },
  "files": [
    "dist",
    "build/"
  ],
  "prettier": {
    "semi": false,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "git+https://o2oprotocol@github.com/o2oprotocol/o2oprotocol.git"
  },
  "keywords": [
    "O2O Protocol",
    "Blockchain",
    "Smart Contract",
    "Ethereum",
    "IPFS"
  ],
  "author": "o2oprotocol.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/o2oprotocol/o2oprotocol/issues"
  },
  "homepage": "https://github.com/o2oprotocol/o2oprotocol#readme",
  "dependencies": {
    "dotenv": "^5.0.1",
    "ipfs-api": "^18.2.1",
    "truffle": "4.0.5",
    "truffle-hdwallet-provider": "^0.0.3",
    "babel-polyfill": "^6.23.0",
    "bs58": "^4.0.1",
    "map-cache": "^0.2.2",
    "npm": "^5.8.0",
    "truffle-contract": "^1.1.8",
    "util.promisify": "^1.0.0"
  },
  "devDependencies": {
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --print-width 120",
      "git add"
    ]
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.0",
    "flow-bin": "^0.51.1",
    "ganache-core": "^2.1.0",
    "html-webpack-plugin": "^3.0.6",
    "mocha": "^3.5.0",
    "mocha-loader": "^1.1.3",
    "node-watch": "^0.5.8",
    "prettier": "1.11.1",
    "sinon": "^2.4.1",
    "truffle": "^4.1.6",
    "truffle-hdwallet-provider": "0.0.3",
    "web3": "^0.20.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.11.2",
    "webpack-node-externals": "^1.6.0"
  }
}
